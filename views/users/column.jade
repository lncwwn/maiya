extends ../broad-layout.jade
block css
    link(rel="stylesheet" href="/assets/dist/css/column.css")
block body
    .uk-grid.uk-grid-collapse
        .uk-width-1-1
            .uk-block.art-column-banner
                .art-column-banner-main
                    if (!column || !column.active)
                        .uk-text-left
                            span 您的专栏尚未开通，马上开通一个吧。
                            a.uk-button.uk-button-large.uk-button-success(type="button" href="/users/setting#column-setting") 开通专栏
                    else
                        input#column-id(type="hidden" value=column.id)
                        .uk-text-left
                            h2= column.name
                            p.uk-text-muted= "创建于" + column.lastModified
            if (column && column.active)
                .uk-block.art-column-body
                    .art-column-body-main
                        .uk-grid.uk-grid-collapse
                            .uk-width-1-1
                                #posts-list.posts-list
                            //.uk-width-1-4
    // handlebars 模版
    script#posts-template(type="text/x-handlebars-template")
        .post
            a.title(href="")

block js-load
    script(src="/assets/dist/js/column.js")
